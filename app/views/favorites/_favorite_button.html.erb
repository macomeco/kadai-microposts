  <% if micropost.fav?(current_user) %>
    <%= form_with(model: micropost.favorites.find_by(user_id: current_user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'unfav', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: micropost.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'fav', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
  